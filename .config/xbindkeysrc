# emoji selector
"rofimoji --use-clipboard"
  Mod4 + e 

# application launcher
"rofi -show run"
  Mod4 + d

# lock screen
"betterlockscreen -l"
  Mod4 + control + q

# two head setup
"dual_monitor"
  Mod4 + Tab

# single head setup
"single_monitor"
  Mod4 + Shift + Tab

# launch terminal
"kitty"
  Mod4 + Return

# reset compton
"pkill compton && compton -b"
  Mod4 + control + t

# screenshot
"shot"
  Mod4 + p

# selection screenshot 
"shot -s"
  Mod4 + s

