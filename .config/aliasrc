#!/bin/sh
# misc
alias cp="cp -i"
alias df="df -h"
alias free="free -m"

# ls
alias ls="ls --color=auto"
alias la="ls -a"
alias ll="ls -la"

# grep
alias grep="grep --color=auto"
alias egrep="egrep --auto=color"
alias fgrep="fgrep --auto=color"
alias ccat="highlight --out-format=ansi"

# editor
alias e="nvim"
alias vi="nvim"
alias vim="nvim"

# npm
alias ni="npm install"
alias nst="npm start"
alias nrn="npm run"

# pacman
alias p="sudo pacman --noconfirm"
alias pss="pacman -Ss --color auto"
alias pqs="pacman -Qs --color auto"
alias pu="sudo pacman -Syu"

#yay
alias y="yay --color=auto"
alias yu="yay -Syu"

# git
alias gst="git status"
alias gct="git commit -m"
alias gps="git push"
alias gpl="git pull"
alias gre="git remote"
alias glg="git log"
alias gck="git checkout"
alias gad="git add"
alias gdf="git diff"
alias gcl="git clone"
alias grt="git reset"
alias grtl="git reset --soft HEAD~1"

# yadm
alias yst="yadm status"
alias yct="yadm commit -m"
alias yps="yadm push"
alias ypl="yadm pull"
alias yre="yadm remote"
alias ylg="yadm log"
alias yck="yadm checkout"
alias yad="yadm add"
alias ydf="yadm diff"
alias yrt="yadm reset"
alias yrtl="yadm reset --soft HEAD~1"

# docker
alias d="sudo docker"

#youtube-dl
alias yta="youtube-dl --add-metadata --extract-audio --audio-format mp3 -o '~/music/%(artist)s/%(album)s/%(track)s.%(ext)s'"
alias ytv="youtube-dl --add-metadata -f bestvideo+bestaudio/best -o '~/Videos/%(title)s.%(ext)s'"

